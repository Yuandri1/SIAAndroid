<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="30dp">
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/kode_peng"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingEnd="20dp"
        android:text="Kode "
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView

        android:id="@+id/desc_peng"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text=" Deskripsi"
        app:layout_constraintBottom_toBottomOf="@+id/kode_peng"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/kode_peng"
        app:layout_constraintTop_toTopOf="@+id/kode_peng"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tot_harga"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:paddingEnd="0dp"
        android:text="Harga"
        app:layout_constraintBottom_toBottomOf="@+id/desc_peng"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/desc_peng"
        app:layout_constraintTop_toTopOf="@+id/desc_peng"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/nam_debet_peng"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingEnd="15dp"
        android:text="Debet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kode_peng" />
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/nom_debet_peng"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=" Nominal"
        app:layout_constraintBottom_toBottomOf="@+id/nam_debet_peng"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nam_debet_peng"
        app:layout_constraintTop_toBottomOf="@+id/kode_peng" />

    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/nam_kredit_peng"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="          Kredit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nam_debet_peng" />

    <TextView
        android:id="@+id/nom_kredit_peng"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="          Nominal"
        app:layout_constraintBottom_toBottomOf="@+id/nam_kredit_peng"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nam_kredit_peng"
        app:layout_constraintTop_toTopOf="@+id/nam_kredit_peng" />



</androidx.constraintlayout.widget.ConstraintLayout>